<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (recipe) { %>
        <form class="add-rec-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="innumber">Number</label>
                    <input type="number" class="form-control" name="innumber" id="innumber" placeholder="Number" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description" id="description" placeholder="Description" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author" placeholder="Author" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="ingridients">Ingridients</label>
                    <input type="text" class="form-control" name="ingridients" id="ingridients" placeholder="Ingridients" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="kkal">Number of kkal</label>
                    <input type="number" class="form-control" name="kkal" id="kkal" placeholder="Number of kkal" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="gramm">Number of gramm</label>
                    <input type="number" class="form-control" name="gramm" id="gramm" placeholder="Number of gramm" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Recipe</button>
        </form>
    <% } else { %>
        <p class="text-center">Recipe Not Found. Go <a href="/add">here</a> to add recipe.</p>
    <% } %>
</div>
</div>
</body>
</html>