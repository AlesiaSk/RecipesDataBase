<% include partials/headerdeliv.ejs %>
    <div class="table-wrapper">
        <% if (provider.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Number</th>
                        <th scope="col">Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Telephone number</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% provider.forEach((provide, index) => { %>
                        <tr>
                            <td><%= provide.num %></td>
                            <td><%= provide.name %></td>
                            <td><%= provide.address %></td>
                            <td><%= provide.telnum %></td>
                            <td>
                                <a href="/editDeliver/<%= provide.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deleteDeliver/<%= provide.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No information found. Go <a href="/addDeliver" >here</a> to add something.</p>
        <% } %>
    </div>
</div>
</body>
</html>