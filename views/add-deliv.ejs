<% include partials/headerdeliv.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-rec-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="num">Number</label>
                        <input type="number" class="form-control" name="num" id="num" placeholder="Number" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" name="address" id="address" placeholder="Address" required>
                    </div>
                    <div class="form-group col-md-6">
                            <label for="telnum">Telephone number</label>
                            <input type="text" class="form-control" name="telnum" id="telnum" placeholder="Telephone" required>
                    </div>
                </div>
            <button type="submit" class="btn btn-primary float-right">Add</button>
        </form>
    </div>
</div>
</body>
</html>