<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (recipe.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Author</th>
                        <th scope="col">Ingridients</th>
                        <th scope="col">kkal</th>
                        <th scope="col">Number of gramms</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% recipe.forEach((rec, index) => { %>
                        <tr>
                            <td><%= rec.code %></td>
                            <td><%= rec.name %></td>
                            <td><%= rec.description %></td>
                            <td><%= rec.author %></td>
                            <td><%= rec.ingridients %></td>
                            <td><%= rec.kkal %></td>
                            <td><%= rec.gramm %></td>
                            <td>
                                <a href="/edit/<%= rec.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= rec.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No information found. Go <a href="/add" >here</a> to add something.</p>
        <% } %>
    </div>
</div>
</body>
</html>