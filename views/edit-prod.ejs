<% include partials/headerprod.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (product) { %>
        <form class="add-prod-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="ingridients">Ingridients</label>
                    <input type="text" class="form-control" name="ingridients" id="ingridients" placeholder="Ingridients" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="description">Recipe</label>
                    <input type="text" class="form-control" name="recipe" id="recipe" placeholder="Recipe" required>
                </div>
            </div>
            
            <button type="submit" class="btn btn-success float-right">Update Product</button>
        </form>
    <% } else { %>
        <p class="text-center">Product Not Found. Go <a href="/add">here</a> to add product.</p>
    <% } %>
</div>
</div>
</body>
</html>